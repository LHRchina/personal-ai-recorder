{
  "name": "audio-recorder",
  "version": "1.0.0",
  "description": "A beautiful macOS audio recorder for capturing system audio output with transcription",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "npm run verify-ffmpeg && electron-builder --mac",
    "build:dmg": "npm run verify-ffmpeg && electron-builder --mac dmg",
    "build:zip": "npm run verify-ffmpeg && electron-builder --mac zip",
    "verify-ffmpeg": "node -e \"if(require('fs').existsSync('ffmpeg')){console.log('✓ FFmpeg found');process.exit(0)}else{console.error('✗ FFmpeg not found in project root');process.exit(1)}\""
  },
  "keywords": [
    "audio",
    "recorder",
    "transcription",
    "whisper",
    "macos",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.audiorecorder.app",
    "productName": "Audio Recorder",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist"
    },
    "beforeBuild": "node scripts/pre-build.js",
    "dmg": {
      "title": "Audio Recorder",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "!ffmpeg"
    ],
    "extraResources": [
      {
        "from": "ffmpeg",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
